<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PlayerLoto.Mobile.Views.MasterView"
             xmlns:pages="clr-namespace:PlayerLoto.Mobile.Views">
  <MasterDetailPage.Master>
    <pages:MenuView x:Name="MasterPage" />
  </MasterDetailPage.Master>
  <MasterDetailPage.Detail>
    <NavigationPage
        BarBackgroundColor="{StaticResource FontColor}"
        BarTextColor="{StaticResource BackgroundColor}">
      <x:Arguments>
        <pages:DetailView />
      </x:Arguments>
    </NavigationPage>
  </MasterDetailPage.Detail>
</MasterDetailPage>