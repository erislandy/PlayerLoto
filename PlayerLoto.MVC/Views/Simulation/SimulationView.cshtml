@model PlayerLoto.MVC.Models.SimulationFilter

@{
    ViewBag.Title = "SimulationView";
}

<h2>SimulationView</h2>

@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-md-3">
            <div class="form-group">
                <input type="submit" value="Filter" class="btn btn-success" />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <div class="row">
                    <div class="col-md-12">
                        @Html.LabelFor(model => model.GameOption, htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="col-md-12">
                        @Html.EnumDropDownListFor(model => model.GameOption, htmlAttributes: new { @class = "form-control" })
                    </div>

                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                <div class="row">
                    <div class="col-md-12">
                        @Html.LabelFor(model => model.InitialDate, htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.InitialDate, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.InitialDate, "", new { @class = "text-danger" })

                    </div>

                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                <div class="row">
                    <div class="col-md-12">
                        @Html.LabelFor(model => model.FinalDate, htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.FinalDate, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.FinalDate, "", new { @class = "text-danger" })

                    </div>

                </div>
            </div>
        </div>

    </div>
    <div class="row">
        <div class="col-lg-12">
            AllMatch: @Model.AllMatch
        </div>
    </div>
    <div class="row">

        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.MatchGameList[0].DrawingResult.Date)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.MatchGameList[0].DrawingResult.Type)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MatchGameList[0].DrawingResult.Pick3)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MatchGameList[0].Matched)
                </th>

            </tr>

            @foreach (var item in Model.MatchGameList)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DrawingResult.Date)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.DrawingResult.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DrawingResult.Pick3)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Matched)
                </td>

            </tr>
            }

        </table>


    </div>
}