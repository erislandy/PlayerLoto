@model PlayerLoto.MVC.Models.WeekResultFilter
@{
    /**/

    ViewBag.Title = "WeekResult";
}


<h2>WeekResult</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="row">
        <div class="col-md-3">
            <div class="form-group">
                <input type="submit" value="Filter" class="btn btn-success" />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <div class="row">
                    <div class="col-md-12">
                        @Html.LabelFor(model => model.DrawType, htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="col-md-12">
                        @Html.EnumDropDownListFor(model => model.DrawType, htmlAttributes: new { @class = "form-control" })
                    </div>

                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                <div class="row">
                    <div class="col-md-12">
                        @Html.LabelFor(model => model.InitialDate, htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.InitialDate, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.InitialDate, "", new { @class = "text-danger" })

                    </div>

                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                <div class="row">
                    <div class="col-md-12">
                        @Html.LabelFor(model => model.FinalDate, htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.FinalDate, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.FinalDate, "", new { @class = "text-danger" })

                    </div>

                </div>
            </div>
        </div>

    </div>



    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DrawType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WeekResultList[0].DateOfSunday)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WeekResultList[0].Sunday)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WeekResultList[0].Monday)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WeekResultList[0].Tuesday)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WeekResultList[0].Wednesday)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WeekResultList[0].Thursday)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.WeekResultList[0].Friday)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WeekResultList[0].Saturday)
            </th>
        </tr>

        @foreach (var item in Model.WeekResultList)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DrawType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfSunday)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sunday)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Monday)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tuesday)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Wednesday)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Thursday)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Friday)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Saturday)
                </td>

            </tr>
        }

    </table>

}

